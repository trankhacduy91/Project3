@model Model.EF.User
@{
    ViewBag.Title = "EditUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content">

    <!--User -->
    <div class="user" style="padding: 40px 0">
        <div class="container py-md">
            <span class="py-md fs-title semi-bold">VIEWING PROFILE - SITESPLAT</span>
            <div class="row">
                <div class="col-md-6">
                    <div class="image-user flex-column center middle">
                        @{
                            var session = (UserLogin)Session[eProject3.Common.CommonConstants.USER_SESSION];
                        }
                        @if (session != null && session.UserId == Model.ID)
                        {
                            @Html.ActionLink("Edit Profile", "Update", "UserDetail",new { id = Model.ID }, null)
                        }
                        <img src="~/Assets/client/images/@Model.Images"
                             style="border-radius:50%;border:4px solid #dedede"
                             width="100"
                             height="100">
                        <span class="semi-bold txt-title">@Model.UserName</span>
                        <span>@Model.Role</span>
                    </div>
                    @*<div class="interest align-center flex-column">
                        <span class="semi-bold"> Interest </span>
                        <span> Football, Girl</span>
                    </div>*@
                </div>
                <div class="col-md-6">
                    <div class="header-info">
                        <i class="fas fa-th"></i> <span class="pl-1 semi-bold" style="font-size: 18px">Bio Personal Information</span>
                    </div>
                    <div class="detail-user flex-column">
                        <span><i class="fas fa-user"></i> <strong>Name</strong> @Model.Name</span>
                        <span><i class="fas fa-globe-europe"></i> <strong>Hospital</strong> @Model.Hospital </span>
                        <span><i class="fas fa-envelope"></i> <strong>Email</strong> @Model.Email </span>
                        <span><i class="fas fa-birthday-cake"></i> <strong>Age</strong> @Model.Age </span>
                        <span><i class="fas fa-briefcase"></i> <strong>Specialize</strong> @Model.Specialize </span>
                        <span><i class="fas fa-link"></i> <strong>Experience</strong> @Model.Experience </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Content HomePage -->
