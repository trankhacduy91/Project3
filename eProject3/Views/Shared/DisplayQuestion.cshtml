@model List<Model.ViewModel.QuestionViewModel>
    
    <div class="container flex-row right">
        <button type="button"
                data-toggle="modal"
                style="background: #26BCB5;color: #ffffff"
                class="btn mb-2 semi-bold"
                onclick="location.href = '@Url.Action("Index", "Question")'">
            <span class="fas fa-plus"></span>
            Create new question
        </button>
        <!-- Modal -->
        <div class="modal fade" id="myModal" role="dialog">
            <div class="modal-dialog">
                <!-- Modal content-->
                <div class="modal-content txt-modal">
                    <div class="modal-header">
                        <h4 class="modal-title">New question</h4>
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                    </div>
                    <div class="modal-body">
                        <form action="#" method="post">
                            <label class="semi-bold txt-title">Subject</label>
                            <input type="text" placeholder="Enter your title" />
                            <div class="flex-column pt-2">
                                <span class="semi-bold txt-title">Content</span>
                                <textarea placeholder="Enter your content"></textarea>
                            </div>
                            <div class="flex-row middle pt-2">
                                <span class="txt-title semi-bold"> Anonymous </span>
                                <input type="checkbox" style="width: 35px">
                            </div>
                            <div class="flex-row right">
                                <buton class="btn btn-primary"> Submit</buton>
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
    </div>  <!-- End Modal -->

    <div class="container">
        <div class="category">
            <span class="semi-bold">New Question</span>
        </div>
        <table style="width: 100%;background: #ffffff">
            <thead>
                <tr style="border: none">
                    <th style="width: 70%">Title</th>
                    <th style="width: 15%">Statistic</th>
                    <th style="width: 15%">Author</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    if (item.Anonymous == true)
                    {
                        <tr>
                            <td>
                                <div class="left-category flex-row">
                                    <img src="~/Assets/client/images/Anonymous.png"
                                         class="image-list-category">
                                    <div class="content-item-category flex-column">
                                        <span class="title-category semi-bold"><a href="/question-@item.ID">@item.Title</a></span>
                                        <span class="fs-md detail-category">@item.Content</span>
                                    </div>
                                </div>
                            </td>

                            <td class="fs-md semi-bold">
                                <div>
                                    <span>Views: @item.Views</span>
                                </div>
                                <p><i class="fas fa-heart"></i> @item.Likes</p>
                            </td>

                            <td>
                                <div class="author-category">
                                    <div class="flex-row middle">
                                        <span>By</span>
                                        <span style="color:  #AA0000;" class="semi-bold">Anonymous</span>
                                        <i class="fas fa-sign-out-alt"></i>
                                    </div>
                                    <p class="fs-md">@item.CreatedTime.ToString(string.Format("dd/MM/yyyy"))</p>

                                </div>

                            </td>

                        </tr>
                    }
                    else
                    {
                        <tr>
                            <td>
                                <div class="left-category flex-row">
                                    <img src="~/Assets/client/images/@item.Images"
                                         class="image-list-category">
                                    <div class="content-item-category flex-column">
                                        <span class="title-category semi-bold"><a href="/question-@item.ID">@item.Title</a></span>
                                        <span class="fs-md detail-category">@item.Content</span>
                                    </div>
                                </div>
                            </td>

                            <td class="fs-md semi-bold">
                                <div>
                                    <span>Views: @item.Views</span>
                                </div>
                                <p><i class="fas fa-heart"></i> @item.Likes</p>
                            </td>

                            <td>
                                <div class="author-category">
                                    <div class="flex-row middle">
                                        <span>By</span>
                                        <span style="color:  #AA0000;" class="semi-bold"><a href="/user-@item.UserID">@item.Name</a></span>
                                        <i class="fas fa-sign-out-alt"></i>
                                    </div>
                                    <p class="fs-md">@item.CreatedTime.ToString(string.Format("dd/MM/yyyy"))</p>
                                    


                                </div>

                            </td>

                        </tr>
                    }
                }




            </tbody>
        </table>
    </div>