<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/Assets/client/css/cs_flex.css">
    <link rel="stylesheet" href="/Assets/client/css/header.css">
    <link rel="stylesheet" href="/Assets/client/css/footer.css">
    <link rel="stylesheet" href="/Assets/client/css/content-home-page.css">
    <link rel="stylesheet" href="~/Assets/client/css/detail-question.css">
    <link rel="stylesheet" href="~/Assets/client/css/detail-user.css">
    <link rel="stylesheet" href="/Assets/client/bootstrap/css/bootstrap.css">
    <link rel="stylesheet" href="/Assets/client/images/fontawesome/css/all.css">
    <link href="https://fonts.googleapis.com/css?family=Beth+Ellen&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/Swiper/4.5.0/css/swiper.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/Swiper/4.5.0/css/swiper.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>

    <style>
        .masthead {
            min-height: 30rem;
            position: relative;
            display: table;
            width: 100%;
            height: auto;
            padding-top: 8rem;
            padding-bottom: 8rem;
            background: linear-gradient(90deg,rgba(255,255,255,.1) 0,rgba(255,255,255,.1) 100%),url(../../Assets/client/images/banner1.jpg);
            background-position: center center;
            background-repeat: no-repeat;
            background-size: cover;
            color: #1DA1F2;
        }    
    </style>
</head>
<body>
    <!-- Header -->
    <div class="header" id="app">
        <!-- Menu -->
        <nav class="navbar navbar-expand-lg menu">
            <div class="container">
                <a class="navbar-brand" href="/Home/Index">
                    <img src="~/Assets/client/images/logo.png" width="50" height="50" alt="Alternate Text" />
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                        aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                    <span style="color: #ffffff" class="fas fa-bars"></span>
                </button>
                <div class="collapse navbar-collapse flex-row"
                     style="justify-content: space-between"
                     id="navbarNavDropdown">
                    <ul class="navbar-nav">
                        <li class="nav-item" v-bind:class="{'active-menu' : isActiveMenuHome}">
                            <a class="nav-link" href="/Home/Index">Home <span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item" v-bind:class="{'active-menu' : isActiveMenuContact}">
                            <a class="nav-link" href="/Home/Contact">Contact Us</a>
                        </li>
                        <li class="nav-item" v-bind:class="{'active-menu' : isActiveMenuContact}">
                            <a class="nav-link" href="/Home/Doctor">Doctors</a>
                        </li>
                        <li class="nav-item" v-bind:class="{'active-menu' : isActiveMenuAbout}">
                            <a class="nav-link" href="/Home/About">About Us</a>
                        </li>
                    </ul>
                    @{
                        var session = Session[eProject3.Common.CommonConstants.USER_SESSION];

                        if (session == null)
                        {
                            <div class="flex-row nav-item">
                                <a href="/User/Index" class="pr-md "><span class="glyphicon glyphicon-user"></span> Create account</a>
                                <span class="glyphicon glyphicon-log-in"></span> @Html.ActionLink("Login", "Index", "Login")
                            </div>
                        }
                        else
                        {
                            var username = ((UserLogin)session).UserName;
                            var userid = ((UserLogin)session).UserId;
                            <div style="position: relative">
                                <div class="profile"
                                     v-on:click="handleDropdown">
                                    <span id="author">
                                        @username
                                    </span>
                                </div>
                                <ul v-if="isHide"
                                    class="profile-list">
                                    <li><a href="/user-@userid"> View Profile</a></li>
                                    <li>@Html.ActionLink("Logout", "Logout", "Login")</li>
                                </ul>
                            </div>
                        }

                    }
                </div>
            </div>
        </nav>
        <!-- End Menu -->
    </div>
    <!-- End Header -->
    <header class="masthead d-flex">
        <div class="container text-center my-auto">
            <h1 class="mb-1">Team of doctors</h1>
            <h3 class="mb-2">
                <em>Best offer for you</em>
            </h3>
            <a class="btn btn-primary btn-xl js-scroll-trigger" href="/Home/Doctor">Out Doctor</a>
        </div>
        <div class="overlay"></div>
    </header>
        <!-- Content HomePage -->
        <div class="content">
            @RenderBody()
        </div>
        <!-- End Content HomePage -->
        <!-- Footer -->
        <div class="footer">
            <div class="wrap-footer">
                <div class="mid-header">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-6 flex-column">
                                <span class="semi-bold fs-title pb-lg-3" style="color: rgb(255, 255, 255);">BUILT TO LAST</span>
                                <span>
                                    Why Would you <span id="author">as</span> Settle for Less when you can have More? Do not let other Authors Fool you with
                                    Empty Marketing Keywords. FLATBOOTS is what you Deserve. Built to last, Built from Scratch,
                                    Nothing Less.
                                </span>
                            </div>
                            <div class="col-md-6 pl-xl-5" style="z-index: 3">
                                <span class="fs-title semi-bold" style="color: rgb(255, 255, 255);">Follow us on</span>
                                <div class="flex-row list-icon-social pt-2">
                                    <a href="https://www.facebook.com/">
                                        <i class="fab fa-facebook" style="color: #ffffff"></i>
                                    </a>
                                    <a href="https://twitter.com/">
                                        <i class="fab fa-twitter" style="color: #1DA1F2"></i>
                                    </a>
                                    <a href="https://www.instagram.com/">
                                        <i class="fab fa-instagram"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="bottom-footer">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-4">
                                <p>Author</p>
                                <p>
                                    He is a sociable cheerful girl who always wants to make friends with people but does not dare to
                                    just let other people catch the story first, wants to be a high-class programmer so that he will
                                    not have to worry about earning money later. lover
                                </p>
                            </div>
                            <div class="col-md-4">
                                <p>POST</p>
                                <div class="flex-row middle">
                                    <img src="/Assets/client/images/chinh.jpg"
                                         style="margin-right: 5px; border-radius: 50%"
                                         width="50" alt="">
                                    <span>Hỏi đáp về khỏi ốm</span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <p>Contact</p>
                                <div class="flex-column">
                                    <p><i class="fas fa-map-marker-alt"></i> 285 Doi can str - Ba Dinh - Ha Noi</p>
                                    <p><i class="fas fa-envelope-open-text"></i> chinh12hy@gmail.com</p>
                                    <p><i class="fas fa-building"></i> Bach Mai hospital</p>
                                    <p><i class="fas fa-globe-asia"></i> noname.com.vn</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- End Footer -->
        @RenderSection("scripts", required: false)
        <script src="https://cdnjs.cloudflare.com/ajax/libs/Swiper/4.5.0/js/swiper.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/Swiper/4.5.0/js/swiper.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js"></script>
        <script>
            function handleName() {
                var name = document.getElementById("author").innerText;
                document.getElementById("author").innerHTML = name.slice(0, 1).toUpperCase();
            }

            handleName();

            var app = new Vue({
                el: '#app',
                data: {
                    message: 'Hello Vue!',
                    isHide: false,
                },

                computed: {
                    isActiveMenuHome() {
                        return window.location.pathname === '/Home/Index'
                    },
                    isActiveMenuAbout() {
                        return window.location.pathname === '/Home/About'
                    },
                    isActiveMenuContact() {
                        return window.location.pathname === '/Home/Contact'
                    },
                },

                created() {
                    console.log(window.location.pathname)
                },

                methods: {
                    handleDropdown() {
                        this.isHide = !this.isHide;
                    }
                }
            })
        </script>

        <script>
            var swiper = new Swiper('.swiper-container', {
                spaceBetween: 30,
                speed: 1000,
                centeredSlides: true,
                autoplay: {
                    delay: 5000,
                    disableOnInteraction: false,
                },
                pagination: {
                    el: '.swiper-pagination',
                    clickable: true,
                },
                navigation: {
                    nextEl: '.swiper-button-next',
                    prevEl: '.swiper-button-prev',
                },
            });
        </script>
        @section scripts{
            <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
                    integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
                    crossorigin="anonymous"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"
                    integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
                    crossorigin="anonymous"></script>
            <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"
                    integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
                    crossorigin="anonymous"></script>
            <script src="~/Scripts/jquery-3.3.1.min.js"></script>
            <script src="~/Scripts/jquery.signalR-2.4.1.min.js"></script>
            <script src="@Url.Content("~/signalr/hubs")"></script>
        }
</body>
</html>